@{
    ViewData["Title"] = "歡迎頁面";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">  <!-- 引用CSS -->
</head>
<body>
    <!-- Hero區塊 -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">開啟您的數位之旅</h1>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">立即登入</a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 你的網站名稱。所有權利保留。</p>
        </div>
    </footer>

    <style>
        /* 基本樣式 */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #fff;
            background-color: #34495e;
        }

        /* Hero區塊 */
        .hero-section {
            position: relative;
            height: 60vh; /* 調整高度 */
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            overflow: hidden; /* 確保動畫不會溢出 */
            animation: backgroundColorChange 6s infinite alternate; /* 加入動畫效果 */
        }

        .hero-title {
            font-size: 50px;
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
            animation: fadeIn 2s ease-out;
        }

        .btn {
            padding: 18px 40px;
            font-size: 22px;
            text-decoration: none;
            color: white;
            border-radius: 50px;
            background-color: #e74c3c;
            box-shadow: 0 10px 30px rgba(231, 76, 60, 0.5);
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

            .btn:hover {
                transform: scale(1.1);
                background-color: #c0392b;
            }

        footer {
            background-color: #2c3e50;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* 動畫效果 */
        @@keyframes fadeIn {
            0%

        {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* 背景顏色變換的動畫 */
        @@keyframes backgroundColorChange {
            0%

        {
            background: #1c92d2; /* 藍色 */
        }

        20% {
            background: #3aa0c6; /* 偏綠藍色 */
        }

        40% {
            background: #63afba; /* 淺藍色 */
        }

        60% {
                background: #7bbfca; /* 更淺的藍色 */
        }

        80% {
            background: #8dbcd1; /* 淺天藍色 */
        }

        100% {
            background: #1c92d2; /* 回到原來的藍色 */
        }

        }
    </style>
</body>
</html>
